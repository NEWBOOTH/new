  <div class="container mt-5 mb-5">
    <h1>Media List</h1>
    <div class="row">
      <% combinedData.forEach((item) => { %>
        <div class="col-4 col-lg-2 m-2">
          <a href="<%= item.mediaType === 'movie' ? `/movie/${item.id}` : `/series/${item.id}` %>" >
            <div class="car">
              <img class="card-img-top" src="https://image.tmdb.org/t/p/w200/<%= item.background %>" alt="<%= item.title %> Poster">
              <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>
              </div>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
</div>


