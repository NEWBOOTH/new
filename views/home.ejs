    <% if (currentPage > 1) { %>
      <div class="page-item justify-content-start"><a class="page-link" href="/?page=<%= currentPage - 1 %>">&leftarrow;Previous</a></div>
    <% } %>
    <% if (currentPage < 1000) { %>
      <div class="page-item ms-auto"><a class="page-link" href="/?page=<%= currentPage + 1 %>">NEXT&rightarrow;</a></div>
    <% } %>
  </ul>
</nav>
