<%-include ('partials/header') -%>
  


 

 
   <div class="row ms-3 mt-3">
     <div class="col- col-sm-3 ">
       <div class="card">
         <div class="card-body">
          
            <% if (movie.background) { %>
                <img src="<%= movie.background %>" class="card-img-top">
              <% } %>
  
           <h5 class="card-title"><%= movie.title %></h5>
          
           <p class="card-text">
            Release Date: <%= movie.releaseDate %>
          </p>
           <p class="card-text">
             Genre: <%= movie.genre %>
           </p>
           <a href="/download/<%= movie.id %>" class="btn btn-primary">Download</a>
         </div>
       </div>
       
       </div>
       <div class="col-md-5 col-sm-6 m-5">
        <div class="card p-2"><h1>OVERVIEW</h1><%= movie.overview %></div>
        <div class="card mt-3">
          <h4>CAST</h4>
          <ul><li></li></ul>
        </div>
        </div>
       </div>
   </div>


 
 






