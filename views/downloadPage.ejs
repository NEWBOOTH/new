

 <%-include ('partials/header') -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 col-lg-4 col-sm-5 mb-4">
      <div class="cad">
        <h4 class="card-title"><%= movie.title %></h4>
        <div class="card-body">
          <% if (movie.background) { %>
            <img src="https://image.tmdb.org/t/p/w200/<%= movie.background %>" class="cad-img-top" alt="<%= movie.title %> Poster">
          <% } else { %>
            <p>No poster available.</p> 
          <% } %>
          
          <p class="card-text">Release Date: <%= movie.release %></p>
          <p class="card-text">Genre: <%= movie.genre_ids %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-5 ">
      <div class="card mb-3">
        <div class="card-body">
          <h4>Overview</h4>
          <p><%= movie.overview %></p>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-body">
          <h4>Cast</h4>
          <% if (movie.cast && movie.cast.length > 0) { %>
            <ul>
              <% movie.cast.forEach(actor => { %>
                <li><%= actor.name %> (<%= actor.role || 'N/A' %>)</li>
              <% }); %>
            </ul>
          <% } else { %>
            <p>Cast information not available.</p>
          <% } %>
        </div>
      </div>
      <div class="car -3">
        <h4>Trailer</h4>
        <% if (movie.trailer) { %>
          <div class="d-flex justify-content-center m-5">
            <svg width="500" height="90" viewBox="10 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M18.5 12H5.5V10H18.5V12Z" fill="#000"/>
              <path d="M18.5 14H5.5V16H18.5V14Z" fill="#000"/>
            </svg>
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= movie.trailer %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
          </div>   
          
          <% } %>
         
      </div>
      <a href="/download/<%= movie.id %>" class="btn btn-primary mt-3">Download</a>
    </div>
  </div>
</div>

</div>

<%-include ('partials/footer') -%>


 






