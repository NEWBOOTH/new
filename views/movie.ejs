<%-include ('partials/header') -%>

<div class="container">
    <h2 class="mb-4">Available Movies</h2>
    <div class="row">
      <% movieDatas.forEach(movie => { %>
        
        <div class="col-md-4 col-sm-4">
          <a href="/movie/<%= movie.id %>/<%= movie.movieSlug %>" class="">
          <div class="card">
            <% if (movie.background) { %>
              <img src="<%= movie.background %>" class="card-img-top" alt="<%= movie.title %> Poster">
            <% } %>
            
              
            
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
             </a>
            </div>
          </div>
        </div>
      <% }); %>

      
    </div>
  </div>
  
  <%-include ('partials/footer') -%>