<%-include ('partials/header') -%>

<div class="containe">
    <h2 class="mb-4">Available Movies</h2>
    <div class="row">
      <% movieDatas.forEach(movie => { %>
        
        <div class="col-md-2 col-sm-3">
          <a href="/movie/<%= movie.id %>/" class="">
          <div class="card">
            <% if (movie.background) { %>
              <img src="https://image.tmdb.org/t/p/w200/<%= movie.background %>" class="card-img-top" alt="<%= movie.title %> Poster">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
             </a>
            </div>
          </div>
        </div>
      <% }); %>

      
    </div>
  </div>
  
  <%-include ('partials/footer') -%>