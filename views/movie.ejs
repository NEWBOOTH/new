<%-include ('partials/header') -%>

<div class="container p-">
    <div class="row">
      <% movieDatas.forEach(movie => { %>
        
        <div class="col-md-3 col-4 col-lg-2">
          <a href="/movie/<%= movie.id %>?titles/<%= encodeURIComponent(movie.title) %>" class="lu-one">
          <div class="cad">
            <div class="card-body">
            <% if (movie.background) { %>
              <img src="https://image.tmdb.org/t/p/w200/<%= movie.background %>" class="card-img-top" alt="<%= movie.title %> Poster">
            <% } %>
            
              <h3 class="card-titl"><%= movie.title %></h3>
            </div>
             </a>
           
          </div>
        </div>
      <% }); %>

      
    </div>
  </div>
  
  <%-include ('partials/footer') -%>